body
  background $white
  color $midnightBlue
  font-size 16px

hr
  border 0
  height 1px
  background $midnightBlue

.container
  padding 1em

.header
  background $midnightBlue
  color $white
  cf()

.header-name
  float left
  margin 0

.nav-list
  list-style none
  padding 0
  margin 0
  float right

.nav-list-item
  display inline-block

.nav-link
  color $clouds
  text-decoration none
  font-weight 400
  margin 1em
  display block

  &:hover
    color $white

  &.selected
    color $white
    font-weight 700

    linkUnderlines($midnightBlue, #fff)

.example
  padding 2em 1em 4em

